<html>

<!-- Citation for the following functions -->
<!-- Adapted from the flask-starter-app > edit_people.j2 -->
<!-- Modified variable names and iterators to retrieve desired information for Players database -->
<!-- Source URL: https://github.com/osu-cs340-ecampus/flask-starter-app -->

<head>
	<title>Edit Sponsor</title>
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/App.css') }}"> 
</head>

<body>
    <div>
        <table border="2" cellpadding="5"> 
            <caption> Editing Sponsor: </caption>
            <!-- Access data tuple passed from app.py -->
            {% if data %}
                <thead>
                    <tr>
                        <!-- Iterate through every key in the first entry to get the column name -->
                        {% for key in data[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
                        <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                        
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for item in data %}
                    <tr>
                        <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in item.keys() %}
                        
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{item[key]}}</td> {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>

    <div id="edit">
        <!-- form to edit data in Sponsors-->
        <form id="editSponsors" method="post">
            <legend><strong>Edit Sponsor</strong></legend>
            <fieldset>
            <input type="hidden" value="{{data[0].sponsorID}}" class="form-control" id="sponsorID" name="sponsorID" required>
                <label>Sponsor Name</label> <input type="text" name="sponsorName" id="sponsorName" value="{{data[0].sponsorName}}" required>
                <label>Contact Person</label> <input type="text" name="contactPerson" id="contactPerson" value="{{data[0].contactPerson}}" required>
                <label>Contact Email</label> <input type="text" name="contactEmail" id="contactEmail" value="{{data[0].contactEmail}}" required>
            </fieldset>
            <input type="submit" value="Edit Sponsor" name="Edit_Sponsor" class="btn btn-primary" style="margin:.5rem;">
            <a href='/sponsors'><input class="btn" type="button" value="Cancel"></a> 
        </form>
    </div><!--edit-->

</body>