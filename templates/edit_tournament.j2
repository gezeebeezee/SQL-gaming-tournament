<html>

<!-- Citation for the following functions -->
<!-- Adapted from the flask-starter-app > edit_people.j2 -->
<!-- Modified variable names and iterators to retrieve desired information for Players database -->
<!-- Source URL: https://github.com/osu-cs340-ecampus/flask-starter-app -->

<head>
	<title>Edit Tournament</title>
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/App.css') }}"> 
</head>

<body>
    <div>
        <table border="2" cellpadding="5"> 
            <caption> Editing Tournament: </caption>
            <!-- Access data tuple passed from app.py -->
            {% if data %}
                <thead>
                    <tr>
                        <!-- Iterate through every key in the first entry to get the column name -->
                        {% for key in data[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
                        <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                        
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for item in data %}
                    <tr>
                        <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in item.keys() %}
                        
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{item[key]}}</td> {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>

    <div id="edit">
        <!-- form to edit data in Tournaments-->
        <form id="editTournament" method="post">
            <legend><strong>Edit Tournament</strong></legend>
            <fieldset>
            <input type="hidden" value="{{data[0].tournamentID}}" class="form-control" id="tournamentID" name="tournamentID" required>
                <label>Tournament Name</label> <input type="text" name="tournamentName" id="tournamentName" value="{{data[0].tournamentName}}" required>
                <label>Location</label> <input type="text" name="location" id="location" value="{{data[0].location}}" required>
                <label>Start Date</label> <input type="date" name="startDate" id="startDate" value="{{data[0].startDate}}" required>
                <label>End Date</label> <input type="date" name="endDate" id="endDate" value="{{data[0].endDate}}" required>
            </fieldset>
            <input type="submit" value="Edit Tournament" name="Edit_Tournament" class="btn btn-primary" style="margin:.5rem;">
            <a href='/tournaments'><input class="btn" type="button" value="Cancel"></a> 
        </form>
    </div><!--edit-->

</body>